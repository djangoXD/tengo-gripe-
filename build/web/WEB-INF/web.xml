<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PersonaController</servlet-name>
        <servlet-class>controlador.PersonaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonasController</servlet-name>
        <servlet-class>controlador.PersonasController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactoController</servlet-name>
        <servlet-class>controlador.ContactoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>controlador.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProveedoresController</servlet-name>
        <servlet-class>controlador.ProveedoresController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComprasController</servlet-name>
        <servlet-class>controlador.ComprasController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonaController</servlet-name>
        <url-pattern>/PersonaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonasController</servlet-name>
        <url-pattern>/admin/PersonasController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactoController</servlet-name>
        <url-pattern>/admin/ContactoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/admin/UsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProveedoresController</servlet-name>
        <url-pattern>/admin/ProveedoresController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComprasController</servlet-name>
        <url-pattern>/admin/ComprasController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
